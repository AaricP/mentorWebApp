<!-- Testimonials Section -->
<section id="testimonials" class="testimonials section">
<!-- Section Title -->
<div id="kudos" class="container section-title d-flex justify-content-between align-items-center" data-aos="fade-up">
  <div>
    <h2>Testimonials</h2>
    <p>What our clients say</p>
  </div>
  <a href="/kudos" class="btn btn-outline-success rounded-pill px-4 py-2">Send Kudos</a>
</div>


  <!-- End Section Title -->

  <div class="container" data-aos="fade-up" data-aos-delay="100">
    <div class="swiper init-swiper">
      <script type="application/json" class="swiper-config">
              {
                "loop": true,
                "speed": 600,
                "autoplay": {
                  "delay": 5000
                },
                "slidesPerView": "auto",
                "pagination": {
                  "el": ".swiper-pagination",
                  "type": "bullets",
                  "clickable": true
                },
                "breakpoints": {
                  "320": {
                    "slidesPerView": 1,
                    "spaceBetween": 40
                  },
                  "1200": {
                    "slidesPerView": 2,
                    "spaceBetween": 20
                  }
                }
              }
            </script>
      <div class="swiper-wrapper">
        <% testimonials.forEach((testimonial) => { %>
        <div class="swiper-slide">
          <div class="testimonial-wrap">
            <div class="testimonial-item">
              <img src="<%= testimonial.image.startsWith('http') ? testimonial.image : `/img/testimonials/${testimonial.image}` %>" class="testimonial-img" alt="<%= testimonial.name %>" />
              <h3><%= testimonial.name %></h3>
              <h4><%= testimonial.occupation %></h4>
              <div class="stars"><i class="<%= testimonial.rating > 0 ? 'bi bi-star-fill' : 'bi bi-star' %>"></i><i class="<%= testimonial.rating > 1 ? 'bi bi-star-fill' : 'bi bi-star' %>"></i><i
                  class="<%= testimonial.rating > 2 ? 'bi bi-star-fill' : 'bi bi-star' %>"></i><i class="<%= testimonial.rating > 3 ? 'bi bi-star-fill' : 'bi bi-star' %>"></i><i class="<%= testimonial.rating > 4 ? 'bi bi-star-fill' : 'bi bi-star' %>"></i></div>
              <p>
                <i class="bi bi-quote quote-icon-left"></i>
                <span><%= testimonial.quote %></span>
                <i class="bi bi-quote quote-icon-right"></i>
              </p>
            </div>
          </div>
        </div>
        <!-- End testimonial item -->
        <% }) %>
      </div>
      <div class="swiper-pagination"></div>
    </div>
  </div>
</section>
<!-- End Testimonials Section -->